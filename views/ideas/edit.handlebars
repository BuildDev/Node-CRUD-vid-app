{{/each}}


<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type='hidden' name="_method" value='PUT'>
        <div class="from-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" required value="{{idea.title}}">
        </div>
        <div class="from-group">
            <label for="title">Details</label>
            <textarea type="text" class="form-control" name="details" required {{idea.datails}}></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>